    "@dcl/ui-scene-utils": "^1.8.1",
    "decentraland": "^3.10.1"
  },
  "devDependencies": {
    "decentraland-ecs": "^6.6.9"
  },
  "bundledDependencies": [
    "@dcl/ui-scene-utils",
    "@dcl/ecs-scene-utils",
    "@dcl/subtitle-helper",
    "@dcl/show-management"
  ]
}